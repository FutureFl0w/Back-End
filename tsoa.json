{
    "entryFile": "src/index.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "src/controllers/**/*.controller.ts"
    ],
    "spec": {
        "outputDirectory": "docs",
        "specVersion": 3,
        "securityDefinitions": {
            "api_key": {
                "type": "apiKey",
                "in": "header",
                "name": "x-api-key"
            },
            "jwt": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "routes": {
        "routesDir": "src/routes",
        "authenticationModule": "./src/middlewares/auth.middleware"
    }
}