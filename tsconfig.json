{
  "compilerOptions": {
    "target": "ESNext",           // Use ESNext target to enable ES modules
    "module": "ESNext",           // Enable ES module output
    "moduleResolution": "node",   // Use Node.js module resolution
    "esModuleInterop": true,      // Allow default imports from non-ES modules
    "outDir": "./dist",           // Output directory for compiled JS files
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "server.ts",                  // Include your main TypeScript file
    "src/**/*"                    // Include other source files
  ]
}

